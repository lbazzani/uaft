// UAFT Mail Server - Prisma Schema
// Database: uaft

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== AUTHENTICATION & USERS ====================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Hashed password
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  mailAddresses MailAddress[]
  sentEmails    MailMessage[] @relation("SentEmails")
  receivedEmails MailMessage[] @relation("ReceivedEmails")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ==================== MAIL SERVER ====================

// Domini configurabili per il mail server
model MailDomain {
  id              String   @id @default(cuid())
  domain          String   @unique
  mxRecord        String?
  spfRecord       String?
  dkimPublicKey   String?  @db.Text
  dkimPrivateKey  String?  @db.Text
  dkimSelector    String?  @default("default")
  dmarcRecord     String?

  // TLS/SSL Certificates
  tlsKeyPath      String?  // Path to TLS private key
  tlsCertPath     String?  // Path to TLS certificate
  tlsAutoRenew    Boolean  @default(false) // Auto-renew with Let's Encrypt

  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  addresses       MailAddress[]

  @@map("mail_domains")
}

// Indirizzi email per gli utenti
model MailAddress {
  id        String   @id @default(cuid())
  address   String   @unique // es: info@uaft.com
  userId    String
  domainId  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  domain    MailDomain @relation(fields: [domainId], references: [id], onDelete: Cascade)

  @@map("mail_addresses")
}

// Messaggi email
model MailMessage {
  id            String   @id @default(cuid())
  messageId     String   @unique // RFC 5322 Message-ID
  fromAddress   String
  toAddresses   String[] // Array di indirizzi destinatari
  ccAddresses   String[] @default([])
  bccAddresses  String[] @default([])
  subject       String?
  bodyText      String?  @db.Text
  bodyHtml      String?  @db.Text
  headers       Json?    // Headers email completi
  size          Int?     // Dimensione in bytes
  isRead        Boolean  @default(false)
  isStarred     Boolean  @default(false)
  isArchived    Boolean  @default(false)
  isSpam        Boolean  @default(false)
  isDeleted     Boolean  @default(false)
  sentAt        DateTime @default(now())
  receivedAt    DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  senderId      String?
  receiverId    String?
  sender        User?    @relation("SentEmails", fields: [senderId], references: [id], onDelete: SetNull)
  receiver      User?    @relation("ReceivedEmails", fields: [receiverId], references: [id], onDelete: SetNull)
  attachments   MailAttachment[]
  labels        MailLabel[]

  @@index([fromAddress])
  @@index([toAddresses])
  @@index([receivedAt])
  @@index([senderId])
  @@index([receiverId])
  @@map("mail_messages")
}

// Allegati email
model MailAttachment {
  id          String   @id @default(cuid())
  messageId   String
  filename    String
  contentType String
  size        Int
  data        Bytes?   @db.ByteA // Storage binario
  url         String?  // Oppure URL se storage esterno (S3, etc.)
  createdAt   DateTime @default(now())

  // Relations
  message     MailMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@map("mail_attachments")
}

// Labels/Folder personalizzate
model MailLabel {
  id        String   @id @default(cuid())
  name      String
  color     String?
  messageId String
  createdAt DateTime @default(now())

  // Relations
  message   MailMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@map("mail_labels")
}

// Log SMTP per debugging
model MailLog {
  id        String   @id @default(cuid())
  type      String   // 'incoming', 'outgoing', 'error'
  from      String?
  to        String?
  subject   String?
  status    String   // 'success', 'failed', 'bounced'
  error     String?  @db.Text
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([type])
  @@index([status])
  @@index([createdAt])
  @@map("mail_logs")
}
